<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#212121">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="48dp"
        app:cardBackgroundColor="#FF9800"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expert Dashboard"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            
            <TextView
                android:id="@+id/tv_expert_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Expert"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tab Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="4">

        <!-- Questions Tab -->
        <LinearLayout
            android:id="@+id/btnTabQuestions"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/bg_tab_selected"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/tvPendingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending: 0"
                android:textSize="10sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questions"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:gravity="center" />
        </LinearLayout>

        <!-- My Answers Tab -->
        <LinearLayout
            android:id="@+id/btnTabMyAnswers"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/bg_tab_unselected"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My"
                android:textSize="10sp"
                android:textColor="#CCCCCC" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Answers"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#CCCCCC"
                android:gravity="center" />
        </LinearLayout>

        <!-- Community Tab -->
        <LinearLayout
            android:id="@+id/btnTabCommunity"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/bg_tab_unselected"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¾"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crop Charts"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#CCCCCC"
                android:gravity="center" />
        </LinearLayout>

        <!-- My Rating Tab -->
        <LinearLayout
            android:id="@+id/btnTabRating"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/bg_tab_unselected">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Rating"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#CCCCCC"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Content Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Questions View -->
        <LinearLayout
            android:id="@+id/viewQuestions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Delete All Button -->
            <Button
                android:id="@+id/btnDeleteAllQuestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="ðŸ—‘ï¸ Delete All Questions"
                android:textSize="14sp"
                android:backgroundTint="#F44336"
                style="@style/Widget.Material3.Button" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewQuestions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:clipToPadding="false" />

            <TextView
                android:id="@+id/emptyQuestions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No pending questions"
                android:textSize="18sp"
                android:textColor="#757575"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <!-- My Answers View -->
        <LinearLayout
            android:id="@+id/viewMyAnswers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Filter Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAllAnswers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All Answers"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginEnd="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLatest5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Latest 5"
                    android:textColor="#CCCCCC"
                    android:backgroundTint="#424242"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMyAnswers"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:clipToPadding="false" />

            <TextView
                android:id="@+id/emptyMyAnswers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="You haven't answered any questions yet"
                android:textSize="18sp"
                android:textColor="#757575"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Community View -->
        <LinearLayout
            android:id="@+id/viewCommunity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCommunity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false" />

            <TextView
                android:id="@+id/emptyCommunity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="No farmer crop charts shared yet"
                android:textSize="18sp"
                android:textColor="#757575"
                android:gravity="center"
                android:visibility="gone" />
        </LinearLayout>

        <!-- My Rating View -->
        <ScrollView
            android:id="@+id/viewRating"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Average Rating"
                            android:textSize="16sp"
                            android:textColor="#CCCCCC" />

                        <TextView
                            android:id="@+id/tvAverageRatingValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textSize="48sp"
                            android:textStyle="bold"
                            android:textColor="#FFD700"
                            android:layout_marginTop="8dp" />

                        <RatingBar
                            android:id="@+id/ratingBarAverage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@android:style/Widget.Material.RatingBar"
                            android:numStars="5"
                            android:isIndicator="true"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#1E1E1E"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Total Answers"
                                android:textSize="14sp"
                                android:textColor="#CCCCCC" />

                            <TextView
                                android:id="@+id/tvTotalAnswers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Rated Answers"
                                android:textSize="14sp"
                                android:textColor="#CCCCCC" />

                            <TextView
                                android:id="@+id/tvRatedAnswers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Certificate Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGetCertificate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reach 4.5 ratings to get rewards"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#757575"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Latest Ratings Toggle Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnToggleLatestRatings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Latest Ratings"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9800"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Latest Ratings Container -->
                <LinearLayout
                    android:id="@+id/containerLatestRatings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latest Ratings"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewLatestRatings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />

                    <TextView
                        android:id="@+id/emptyRatings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No ratings yet"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:padding="32dp"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:backgroundTint="#F44336"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_margin="8dp"/>

</LinearLayout>
