<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_weather"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header with Refresh Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŒ¤ï¸ Weather for Farming"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Refresh"
                        android:textSize="14sp"
                        app:icon="@android:drawable/ic_popup_sync"
                        app:iconGravity="textStart"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <ProgressBar
                        android:id="@+id/progress_refresh"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:indeterminate="true"
                        android:indeterminateTintMode="src_atop"
                        android:indeterminateTint="#2E7D32"/>
                </FrameLayout>
            </LinearLayout>

            <!-- Current Weather Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading location..."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:drawableStart="@android:drawable/ic_dialog_map"
                        android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/tv_current_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--Â°C"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tv_weather_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="16sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tv_feels_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feels like: --Â°C"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:layout_marginTop="4dp"/>

                    <!-- Weather Details Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:id="@+id/tv_humidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’§ Humidity: --%"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:id="@+id/tv_wind_speed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ¬ï¸ Wind: -- km/h"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:id="@+id/tv_rainfall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ§ï¸ Rain: -- mm"
                                android:textSize="14sp"/>
                        </LinearLayout>

                    </GridLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Agriculture Alerts Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFDE7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ¾ Farming Conditions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#F57F17"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tv_frost_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸ FROST WARNING"
                        android:textSize="14sp"
                        android:textColor="#D32F2F"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="#FFEBEE"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_spraying_condition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Spraying conditions"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:background="#E8F5E9"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_humidity_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Humidity status"
                        android:textSize="14sp"
                        android:padding="8dp"
                        android:background="#E3F2FD"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 7-Day Forecast Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… 7-Day Forecast  - Swipe to see all  â†’"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginBottom="12dp"/>

            <!-- Forecast RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_forecast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
